\begin_layout Plain Layout


\backslash
citep{Matilla_2013}
\end_layout

\end_inset

.
 
\end_layout

\end_deeper
\begin_layout Itemize

\series bold
Auxina
\end_layout

\begin_deeper
\begin_layout Standard
Contribuye al alargamiento celular.
\end_layout

\end_deeper
\begin_layout Itemize

